<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body bgcolor="#eee" margintop="0" marginbottom="0" marginleft="0" marginright="0" marginheight="0" marginwidth="0" style="background-color: #eee;
        font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
        font-size: 15px;
        line-height: 17px;">

<style type="text/css">
    {% block styles %}
    {% endblock %}
</style>

<table cellpadding="25" cellspacing="0" border="0" align="center" width="560" style="padding: 0 25px 25px;">
<tbody>
    <tr>
        <td align="center">
            <a href="https://www.bindeo.com" title="Bindeo" target="_blank">
                <img src="https://www.bindeo.com/images/mails/bindeo.png" alt="Bindeo" width="120">
            </a>
        </td>
    </tr>
    <tr>
    {% block body %}{% endblock %}
    </tr>
</tbody>
</table>

<table cellpadding="0" cellspacing="0" border="0" align="center" width="560" style="padding: 0 25px 25px;">
    <tbody><tr>
        <td style="font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 15px;color: #999">
            <p style="margin-top: 0;">
                {{ translate.translate('general_sendedto', user.name) }} (<a href="mailto:{{ user.email }}" style="text-decoration: none;">{{ user.email }}</a>),
                {{ translate.translate('general_notifyus', '<a href="mailto:any@bindeo.com">', '</a>')|raw }}.
            </p>
            <p>
                {{ translate.translate('general_bindeo_registered') }}.
            </p>
        </td>
    </tr>
    </tbody>
</table>
</body>
</html>